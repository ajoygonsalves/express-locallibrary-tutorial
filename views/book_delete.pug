extends layout

block content

  h1 #{title}: #{book.title}

  if (!book)

    p #[strong Sorry, this book doesn not exist.]
   

  else
    p Do you really want to delete this Author?

    form(method='POST')
      div.form-group
        input#bookid.form-control(type='hidden', name='bookid', value=book._id )

      button.btn.btn-primary(type='submit') Delete
